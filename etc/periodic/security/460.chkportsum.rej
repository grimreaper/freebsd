--- 15,34 ----
  
  case "${daily_status_security_chkportsum_enable}" in
  	[Yy][Ee][Ss])
+ 	set -f
  	pkg_info -ga 2>/dev/null | \
+ 	while IFS= read -r line; do
+ 		set -- $line 
+ 		case $1 in
  			Information)
+ 			case $2 in
+ 				for) name="${3%%:}" ;;
+ 				*) name='??' ;;
  			esac
  			;;
  			Mismatched|'') ;;
+ 			*) [ -n "${name}" ] && 
+ 				echo "${name}: ${line%% fails the original MD5 checksum}"
  			;;
  		esac
  	done
