# $FreeBSD$

INCDIR = ${STAGEDIR}/usr/include

LIB = elf

SHLIB_MAJOR = 1

SRCS = \
	elf_begin.c \
	elf_cntl.c \
	elf_end.c \
	elf_errmsg.c \
	elf_errno.c \
	elf_data.c \
	elf_fill.c \
	elf_flag.c \
	elf_getarhdr.c \
	elf_getarsym.c \
	elf_getbase.c \
	elf_getident.c \
	elf_hash.c \
	elf_kind.c \
	elf_memory.c \
	elf_next.c \
	elf_rand.c \
	elf_rawfile.c \
	elf_phnum.c \
	elf_shnum.c \
	elf_shstrndx.c \
	elf_scn.c \
	elf_strptr.c \
	elf_update.c \
	elf_version.c \
	gelf_cap.c \
	gelf_checksum.c \
	gelf_dyn.c \
	gelf_ehdr.c \
	gelf_getclass.c \
	gelf_fsize.c \
	gelf_move.c \
	gelf_phdr.c \
	gelf_rel.c \
	gelf_rela.c \
	gelf_shdr.c \
	gelf_sym.c \
