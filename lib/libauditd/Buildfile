#
# $FreeBSD$
#

OPENBSMDIR = ${BSDSRCTOP}/contrib/openbsm
LIBAUDITDDIR = ${OPENBSMDIR}/libauditd
LIBBSMDIR = ${OPENBSMDIR}/libbsm

.PATH: 	${LIBAUDITDDIR}

LIB = auditd

SRCS = auditd_lib.c

#
# Must use BSM include files from within the contrib area, not the system.
#
CFLAGS += -I${OPENBSMDIR} -I${LIBBSMDIR}

SRCDIRDEP= contrib/openbsm/bsm contrib/openbsm/config contrib/openbsm/libauditd
DIRDEP= include stage sys/MACHINE_ARCH/include sys/bsm sys/netinet sys/netinet6 sys/sys
.include <bsd.lib.mk>
