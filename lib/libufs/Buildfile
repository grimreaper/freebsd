# $FreeBSD$

LIBDIR = ${STAGEDIR}/lib
INCDIR = ${STAGEDIR}/usr/include

LIB = ufs

SRCS = \
	block.c \
	cgroup.c \
	inode.c \
	sblock.c \
	type.c

INCS = libufs.h

