# $FreeBSD$

MOUNT = ${BSDSRCTOP}/sbin/mount
UMNTALL= ${BSDSRCTOP}/usr.sbin/rpc.umntall

.PATH: ${MOUNT} ${UMNTALL}

PROG = mount_nfs

SRCS = \
	getmntopts.c \
	mount_nfs.c \
	mounttab.c

WARNS ?= 3

CFLAGS += -DNFS -I${MOUNT} -I${UMNTALL}

SRCDIRDEP= sbin/mount usr.sbin/rpc.umntall
DIRDEP= gnu/lib/csu gnu/lib/libgcc include include/arpa include/machine include/rpc lib/csu/MACHINE_ARCH lib/libc stage sys/MACHINE_ARCH/include sys/bsm sys/netinet sys/netinet6 sys/nfs sys/nfsclient sys/rpc sys/sys
.include <bsd.prog.mk>
